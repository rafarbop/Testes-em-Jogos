#:kivy 2.0.0

<PongBall>:
    size: 50, 50
    canvas:
        Color:
            rgba: 0, 0.6, 0.8, 1
        Ellipse:
            pos: 20, self.parent.height/2+40
            size: self.size
        Ellipse:
            pos: self.parent.right-70, self.parent.height/2-60
            size: self.size

<PongItens>:
    canvas:
        Color:
            rgba: 0, 0.8, 0.6, 1
        Rectangle:
            pos: 0, self.parent.height/4
            size: 20, self.parent.height/2
        Rectangle:
            pos: self.parent.width-20, self.parent.height/4
            size: 20, self.parent.height/2
            
    Label:
        font_size: 70  
        pos: self.parent.parent.width / 4, self.parent.parent.top - self.height
        text: "3"
        
    Label:
        font_size: 70  
        center_x: self.parent.parent.width * 3 / 4
        top: self.parent.parent.top
        text: "2"
    

<PongGame>:
    canvas:
        Color:
            rgba: 0.9, 0.9, 0.9, 0.6
        Rectangle:
            pos: 0, 0
            size: root.width, root.height
    PongItens:
        center: self.parent.center
    PongBall:
        id: pong_ball
        center: self.parent.center
    
    
    